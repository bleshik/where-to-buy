[Unit]
Description=Cleaning Docker Crap Unit
After=docker.service
Requires=docker.service
After=fleet.service
Requires=fleet.service

[Service]
TimeoutStartSec=0
ExecStart=/bin/sh -c 'while [ 1 ] ; do\
            curl https://raw.githubusercontent.com/HardySimpson/docker-cleanup/c627f40367fdd718f7d705e9024f4bdbd99b5681/docker-cleanup.sh | bash -s;\
        sleep 3600;\
    done'
Restart=always

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
