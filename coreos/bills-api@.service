[Unit]
Description=Bills REST API HTTP Service
After=docker.service
Requires=docker.service

[Service]
KillMode=none
TimeoutStartSec=0
TimeoutStopSec=360
EnvironmentFile=/etc/environment
Environment=INSTANCE=%i
ExecStartPre=-/usr/bin/docker stop bills-api-%i
ExecStartPre=-/usr/bin/docker rm bills-api-%i
ExecStartPre=/usr/bin/docker pull bleshik/bills:latest
ExecStart=/usr/bin/docker run -e "ETCD_ENDPOINT=http://$(ifconfig docker0 | awk '/\<inet\>/ { print $2}'):4001" --name bills-api-%i -p 8080:8080 bleshik/bills:latest
ExecStop=/usr/bin/docker stop bills-api-%i
Restart=on-failure

[Install]
WantedBy=multi-user.target

[X-Fleet]                                                                                                                                                                            
MachineMetadata=networking=private
MachineMetadata=type=backend
X-Conflicts=%p@*.service                                                                                                                                                             
Conflicts=%p@*.service
X-Conflicts=docker-discover.service
Conflicts=docker-discover.service
