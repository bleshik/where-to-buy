[Unit]
Description=Reverse Proxy For Services

[Service]
KillMode=none
TimeoutStartSec=0
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker stop docker-discover
ExecStartPre=-/usr/bin/docker rm docker-discover
ExecStartPre=/usr/bin/docker pull jwilder/docker-discover
ExecStart=/usr/bin/docker run --name docker-discover -e ETCD_HOST=${COREOS_PUBLIC_IPV4}:4001 -p 1936:1936 -p 8080:8080 -t jwilder/docker-discover
Restart=on-failure

[X-Fleet]
MachineMetadata=networking=public
