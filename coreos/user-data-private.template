#cloud-config

coreos:
  etcd:
    discovery: https://discovery.etcd.io/34fe87d3790cae49a6b81249a36f5534
    addr: $private_ipv4:4001
    peer-addr: $private_ipv4:7001
  fleet:
    public-ip: $private_ipv4
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: iptables-restore.service
      enable: true
ssh_authorized_keys:
    - ssh-rsa  bleshik@Alexeys-MacBook-Pro.local
write_files:
    - path: /etc/systemd/journald.conf
      permissions: 0644
      content: |
        [Journal]
        Storage=persistent
        RuntimeMaxUse=10M
    - path: /etc/fleet/fleet.conf
      permissions: 0644
      content: |
        metadata="access=private"
    - path: /var/lib/iptables/rules-save
      permissions: 0644
      owner: root:root
      content: |
        *filter
        :INPUT ACCEPT [0:0]
        :FORWARD ACCEPT [0:0]
        :OUTPUT ACCEPT [0:0]
        -A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
        -A INPUT -i eth0 -j DROP
        COMMIT
